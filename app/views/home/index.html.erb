
<div id="welcome">
	
<% if current_user %>
	<p>Welcome, <%= current_user.name %>!</p>
		
<% else %>
	<div id="sign_up">
	<h2>Sign up (it's free!)</h2>
	<p>Already have an account? <%= link_to 'Log In', login_path %></p>
	<% semantic_form_for(@user) do |f| %>
		<%= render 'users/form', :f => f%>
		<script type="text/javascript">
			$('#user_username').defaultValue({'value': 'Username'});
			$('#user_email').defaultValue({'value': 'Email'});
			$('#user_password').defaultValue({'value': 'Password'});
			$('#user_password_confirmation').defaultValue({'value': 'Confirm Password'});

		</script>
		<% end %>
	</div>
	<div id="intro">
	<h3>Because everyone needs a webapp of holding . . .</h3>
	<p>Emerse yourself into the world of tabletop gaming,<br /> 
		without ever worrying about losing your character sheet.</p>
	</div>
	</div>
	<div id = "blurbs">
		
	</div>
	
<% end %>
