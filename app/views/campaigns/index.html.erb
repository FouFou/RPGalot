<div id="sheet_header">
	<span class="right"><%= link_to 'New Campaign', new_campaign_path %></span>
	<h2>Campaigns</h2>
</div>

<% @campaigns.each do |campaign| %>
	<div class="list">
	<table>
		<tr>
			<td class="description">
				<img src="/images/campaign.png" alt"group photo" width="50px" />
			</td>
			<td>
				<table>
					<tr>
						<td class="description"> Title:</td>
						<td><strong><%= link_to h(campaign.title), campaign %></strong></td>
					</tr>
					<tr>
						<td class="description">Game Master:</td>
						<td><%=link_to h(campaign.game_master.name), campaign.game_master%></td>
					</tr>
					<tr>
						<td class="description">Group:</td>
						<td><%=link_to h(campaign.group.title), campaign.group %></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
	</div>
<% end %>
