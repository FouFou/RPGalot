<div class="content">
<div id="sheet_header">

	<h2>Users</h2>
</div>


<% @users.each do |user| %>
	<div class="list">
	<table>
		<tr>
			<td class="description">
				<% if user.gender == "Female"%>
					<img src="/images/profile_female.png" alt"group photo" width="50px" />
				<% else %>
					<img src="/images/profile_male.png" alt"group photo" width="50px" />
				<% end %>
			</td>
			<td>
				<table>
					<tr>
						<td class="description"> Name:</td>
						<td><strong><%= link_to h(user.name), :action => 'show', :id => user %></strong></td>
					</tr>
					<tr>
						<td class="description"> Groups: </td>
						<td><%= 
							user.groups.map do |group|
								link_to h(group.title), group
							end.join(', ')
						%></td>
					</tr>
					
				</table>
			</td>
		</tr>
	</table>
	</div>

<% end %>
</div>

